.btn{
	border-width: 2px;
	border-color:#ffffff;
}
</style>
<div class="jumbotron">
	<div class="container">
		<h1>Calculator</h1>
	</div>
</div>
<div class="container">
<div class="col-lg-4 col-lg-offset-4">
	<div class="panel panel-default">
		<div class="panel-body">
			<!-- Calc -->
			<div id="calc">
				<div class="alert alert-success" style="height:130px">
					<h1 id="output" style="text-align:right"></h1>
					<h4 id="output2" style="text-align:right"></h4>
					<h4 id="old" style="text-align:right"></h4>
				</div>
				<div class="btn-group btn-group-justified">
					<div class="btn btn-lg btn-primary" id="cleBtn">
						CLR
					</div>
					<div class="btn btn-lg btn-info" id="undoBtn">
						UND
					</div>
					<div class="btn btn-lg btn-danger" id="equBtn">
						=
					</div>
				</div><br>
				<div class="btn-group btn-group-justified">
					<div class="btn btn-lg btn-default" id="sevBtn">
						7
					</div>
					<div class="btn btn-lg btn-default" id="eigBtn">
						8
					</div>
					<div class="btn btn-lg btn-default" id="ninBtn">
