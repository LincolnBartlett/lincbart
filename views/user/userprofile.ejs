<% include ../partials/header %>
<% include ../partials/nav %>
<div class="jumbotron">
    <div class="container">
        <h1>CRUD Profile</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-lg-offset-2">
        <div class="thumbnail">
            <img src="/images/fog.jpg">
            <div class="caption">
                <h3><%= foundProfile.username %></h3>
                <p>Number of Comments: <%= foundComments.length %></p>
                <br>
                <% if(currentUser && foundProfile._id.equals(currentUser._id)){ %>
                    <div class="text-center">
                        <form action="/blog/new" method="get">
                            <button class="btn btn-default">Write Blog Post</button>
                        </form>
                    </div>
                <% }; %>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <p><%= foundProfile %></p>
            </div>
        </div>
    </div>
</div>  
<% include ../partials/footer %> 
