<% include ../partials/header %>
<% include ../partials/nav %>   
<div class="jumbotron">
    <div class="container">
        <h1>Blog</h1>
    </div>
</div>
<div class="row">
<div class="panel panel-default col-lg-6 col-lg-offset-2">
    <% allBlogs.reverse().forEach(function(post){ %>  
       <div class="jumbotron text-right" style="padding:10px;margin-top:15px">
        <h1><%= post.name %></h1>
        <h2><%= post.author.username %></h2>
        <p> <%= post.date.getMonth() + 1 %>/<%= post.date.getDate()%>/<%= post.date.getFullYear() %>  </p>
    </div>
    <div class="panel-body">
        <%- `<section>${post.body.substring(0,3500)}<h1 class="text-center">...</h1></section>` %>      
        <p class="text-right">
            <% if (post.comments.length > 1){ %>
                <%= post.comments.length %> Comments
            <% } else{ %>
                <%= post.comments.length %> Comment
            <% } %>
        </p>
        <hr>
         <form action="/blog/<%=post._id%>"style="float:right">
        <button class="text-right btn btn-default"><i class="fa fa-angle-double-right" aria-hidden="true"></i>  Read More</button>
        </form> 
      </div>
    <% }); %> 
</div>
</div>
<% include ../partials/footer %>