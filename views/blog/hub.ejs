<% include ../partials/header %>
<% include ../partials/nav %>   
<div class="jumbotron" style="opacity: .5">
    <div class="container">
        <h1>Blog</h1>
    </div>
</div>
<div class="row">
    <% allBlogs.reverse().forEach(function(post){ %> 
<div class="panel panel-default col-lg-6 col-lg-offset-3">
    <div class="panel-body">
  
    <div class="jumbotron text-right" style="padding:10px">
        <h1><%= post.name %></h1>
        <h2><%= post.author.username %></h2>
        <p><%= post.date.getMonth() + 1 %>/<%= post.date.getDate()%>/<%= post.date.getFullYear() %></p>
    </div>
    <div>
        <%- `<section>${post.body.substring(0,3500)}<h1 class="text-center">...</h1></section>` %>  
            <hr>    
            <p class="text-right">
                <% if (post.comments.length === 1){ %>
                    <%= post.comments.length %> comment
                <% } else{ %>
                    <%= post.comments.length %> comments
                <% } %>
            </p>
            <a href="/blog/<%=post._id%>"><button class="btn btn-default" style="display:block;float:right;"><i class="fa fa-angle-double-right" aria-hidden="true"></i>  Read More</button></a> 

    </div>

    </div>
</div>
    <% }); %>
</div>
<% include ../partials/footer %>