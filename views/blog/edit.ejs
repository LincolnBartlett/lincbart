<% include ../partials/header %>
<% include ../partials/nav %>
<div class="jumbotron col-md-6 col-md-offset-3 text-center">
    <h1 id="header"><%= foundBlog.name%></h1>
        <form id="form" action='/blog/<%= foundBlog._id %>?_method=PUT' method='POST'>
            <div class="form-group container col-md-4 col-md-offset-4">
                <button id="submit" class="btn btn-primary btn-lg" type='submit' name='submit'><i class="fa fa-floppy-o" aria-hidden="true"></i>  Save</button>
                <br>
                <input id="title" class="form-control" type='text' name='blog[name]'value='<%=foundBlog.name%>'></input>
                <textarea class="hidden-xs hidden-sm hidden-md hidden-lg hidden-xl" name="blog[body]" id="bodyPost"></textarea>                   
            </div>
        </form>
</div>
<div class="container panel panel-default col-md-6 col-md-offset-3">
    <div id="window" class="panel panel-body">
            <%- foundBlog.body %>
    </div>
</div>
<div class="container-fluid text-center">
    <div class="container col-md-6 col-md-offset-3">
    <button class="btn btn-danger btn-lg" id="preview" style="display:inline;margin: 10px auto"><i class="fa fa-eye" aria-hidden="true"></i>  Preview</button>
    
    </div>
</div>
<div class="col-md-8 col-md-offset-2 text-left">
    <div id="body" type='text'></div>
</div>
<% include ../partials/footer %>
<script src="/js/editor.js"></script>
<link type="text/css" href="/css/editor.css" rel="stylesheet" />
<script>
$("#submit").hide();
$("#body").hide();
$("#window").hide();
var text = $("#window").html();
var editor = $("#body").Editor({
    "fonts": false,
    "insert_img": false,
    "splchars": false
    });
editor = $("#body").Editor("setText", text.toString());
$("#preview").click(function () {   
    $("#body").fadeIn();
    $("#window").fadeIn();
    $("#submit").fadeIn();
    var post = $("#body").Editor("getText");
    var header= $('#title').val();
    $("#header").html(header);
    $("#window").html(post);
    $("#bodyPost").html(post);
});
</script>